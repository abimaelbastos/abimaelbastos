/* SELECIONAR COLUNAS */

SELECT NOME, SEXO, EMAIL FROM CLIENTE;
SELECT NOME, SEXO, EMAIL, ENDERECO FROM CLIENTE;

/* MUDAR O NOME DE EXIBICAO DA TABELA */

SELECT NOME AS CLIENTE, SEXO, EMAIL, TELEFONE FROM CLIENTE;

/* INVERTENDO EXIBICAO */

SELECT NOME, EMAIL, SEXO, TELEFONE FROM CLIENTE;

/* PROJETAR DADOS NA TABELA */

SELECT NOME, EMAIL, SEXO, TELEFONE, NOW() DATA_HORA FROM CLIENTE;

/* FILTRANDO A TABELA COM WHERE E LIKE */

SELECT NOME, ENDEREÇO, TELEFONE FROM CLIENTE WHERE SEXO = 'M';

SELECT NOME, CPF DROM CLIENTE WHERE SEXO = 'F';

/* UTILIZANDO FILTRO LIKE/ --> % <-- SIGNIFICA QUALQUER COISA ANTES MAS TERMINE COM PE*/

SELECT NOME, SEXO, TELEFONE, CPF FROM CLIENTE WHERE ENDERECO LIKE '%PE';

/* FILTRAR POR 1 INFORMAÇÃO USA-SE % APÓS A INFORMACAO */

SELECT NOME, SEXO, TELEFONE, CPF FROM CLIENTE WHERE ENDERECO LIKE 'CAMPANHA%';

/* FILTRAR CORINGA %%% OU EXATAMENTE*/

SELECT NOME, SEXO, TELEFONE, CPF FROM CLIENTE WHERE ENDERECO LIKE '%IBURA%';
